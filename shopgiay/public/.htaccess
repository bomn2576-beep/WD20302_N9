<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Thiết lập đường dẫn gốc (Base URL)
    # Phải khớp với đường dẫn thư mục công khai của project
    RewriteBase /WD20302-PRO1014_N5/nhahang/public/ 

    # Nếu request không phải file thật, không phải thư mục thật → đẩy hết vào index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # Sửa: Đảm bảo RewriteRule trỏ đến index.php và giữ lại query string (QSA)
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>